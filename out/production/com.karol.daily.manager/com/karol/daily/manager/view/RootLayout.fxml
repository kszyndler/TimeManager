   <center>
      <GridPane styleClass="background" stylesheets="@DarkTheme.css" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
